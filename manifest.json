{
    "$schema": "https://json.schemastore.org/chrome-manifest.json",
    "manifest_version": 2,
    "name": "Nuova",
    "version": "0.1",
    "description": "Compile a ticket using a template",
    "icons": {
        "16": "icons/favicon.ico"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "browser_action": {
        "default_icon": {
            "16": "icons/favicon.ico"
        },
        "default_popup": "popup/index.html",
        "default_title": "Ticketing on steroids"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'"
}